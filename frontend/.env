<div className="form-elements">
           <label htmlFor="price" className="label">Price :</label>
           <TextField
             label="enter product name"
             id="outlined-size-small" 
             size="small" 
             name="price"
             type="number"
             fullWidth 
             value={item.price}
             onChange={setFormData}
             error={errors.price.valid}
             helperText={errors.price.errMsg}
           />
        </div>

        <div className="form-elements">
           <label htmlFor="image" className="label">Image :</label>
             <TextField
                label="enter product image link"
                id="outlined-size-small" 
                size="small"
                name="image"
                multiline
                fullWidth 
                value={item.image}
                error={errors.image.valid}
                helperText={errors.image.errMsg}
                onChange={setFormData}
             />
        </div>

        <div className="form-elements">
            <label htmlFor="description" className="label">Product description :</label>
            <TextField
               label="enter product description"
               id="outlined-size-small" 
               size="small"
               name="description"
               fullWidth 
               value={item.description}
               error={errors.description.valid}
               helperText={errors.description.errMsg}
               onChange={setFormData}
            />
        </div>